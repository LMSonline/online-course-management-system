spring:
  application:
    name: lms

  datasource:
    url: ${SPRING_DATASOURCE_URL:jdbc:postgresql://localhost:5432/lms}
    username: ${SPRING_DATASOURCE_USERNAME:postgres}
    password: ${SPRING_DATASOURCE_PASSWORD:CHANGE_ME}
    driver-class-name: org.postgresql.Driver

  jpa:
    hibernate:
      ddl-auto: ${SPRING_JPA_HIBERNATE_DDL_AUTO:update}
    show-sql: ${SPRING_JPA_SHOW_SQL:true}
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect

  mail:
    host: ${SPRING_MAIL_HOST:smtp.gmail.com}
    port: ${SPRING_MAIL_PORT:587}
    username: ${SPRING_MAIL_USERNAME:CHANGE_ME}
    password: ${SPRING_MAIL_PASSWORD:CHANGE_ME}
    properties:
      mail:
        smtp:
          auth: true
          starttls:
            enable: true

  messages:
    basename: i18n/messages
    encoding: UTF-8
    fallback-to-system-locale: false

  servlet:
    multipart:
      max-file-size: 2GB
      max-request-size: 2GB

  task:
    execution:
      pool:
        core-size: 4
        max-size: 8

logging:
  level:
    org.springframework.security: TRACE

app:
  base-url: ${APP_BASE_URL:http://localhost:8080}
  frontend-url: ${APP_FRONTEND_URL:http://localhost:3000}
  api-version: api/v1

  admin:
    username: admin
    password: CHANGE_ME
    email: admin@example.com

  student:
    username: student
    password: CHANGE_ME
    email: student@example.com

  teacher:
    username: teacher
    password: CHANGE_ME
    email: teacher@example.com

  avatar:
    default-url: https://example.com/default-avatar.png
    max-size-bytes: 10485760
    allowed-content-types:
      - image/jpeg
      - image/png
      - image/webp
    folder: avatars

  metadata:
    author: "© 2025 Group 5 / VN.UIT.LMS"
    license: "Proprietary API – All rights reserved"
    version: "v1.0.0"

jwt:
  secret: ${JWT_SECRET:CHANGE_ME}
  access-token:
    expiration: ${JWT_ACCESS_TOKEN_EXPIRATION:86400}
  refresh-token:
    expiration: ${JWT_REFRESH_TOKEN_EXPIRATION:100000}

cloudinary:
  cloud-name: ${CLOUDINARY_CLOUD_NAME:CHANGE_ME}
  api-key: ${CLOUDINARY_API_KEY:CHANGE_ME}
  api-secret: ${CLOUDINARY_API_SECRET:CHANGE_ME}

minio:
  url: ${MINIO_URL:http://localhost:9000}
  bucket: ${MINIO_BUCKET:lms-videos}
  username: ${MINIO_ROOT_USER:minioadmin}
  password: ${MINIO_ROOT_PASSWORD:minioadmin123}