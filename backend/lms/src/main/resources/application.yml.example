
# Example configuration file for a Spring Boot application.
# Copy this file as 'application.yml' and update the values as needed.


spring:
  application:
    name: lms

  # Database Configuration
  datasource:
    url: jdbc:postgresql://localhost:5432/name_of_your_database
    username: postgres
    password: your_password
    driver-class-name: org.postgresql.Driver

  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect

  # Email Configuration

  mail:
    host: smtp.gmail.com
    port: 587
    username: trinhdev.gl@gmail.com
    password: jppqtqjqunbxxsza
    properties:
      mail:
        smtp:
          auth: true
          starttls:
            enable: true

  # Internationalization (i18n)
  messages:
    basename: i18n/messages
    encoding: UTF-8
    fallback-to-system-locale: false

# Logging Configuration
logging:
  level:
    org.springframework.security: TRACE

# Swagger Configuration
springdoc:
  swagger-ui:
    path: /swagger-ui.html

# Application Settings
app:
  base-url: http://localhost:8080
  frontend-url: http://localhost:3000
  api-version: api/v1

  admin:
    username: admin
    password: Admin@123
    email: admin@gmail.com

# JWT Configuration
jwt:
  secret: your_jwt_secret_key
  access-token:
    expiration: 86400
  refresh-token:
    expiration: 100000

# Cloudinary config
cloudinary:
  cloud-name: your_cloud_name
  api-key: your_api_key
  api-secret: your_api_secret